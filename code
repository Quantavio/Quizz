import time

print("Welcome to my computer quiz!")

playing = input("Do you want to play? ")

if playing.lower() != "yes":
    print("Goodbye")
    quit()
print("Loading.")
time.sleep(1)
print("Loading..")
time.sleep(1)
print("Loading...")
time.sleep(1)
print("Loading....")
time.sleep(1)
print("Loaded")
time.sleep(1)
score = 0
#asking for their first name
time.sleep(2)
first_name = input("What is your first name? ")
print("Hello "+ first_name)
time.sleep(4)
#questions below
answer = input("what does CPU stand for? ")
if answer.lower() == "central processing unit":
    print("Correct ")
    score += 1
else:
    print("Got it wrong")

answer = input("what does RAM stand for? ")
if answer.lower() == "random access memory":
    print("Correct ")
    score += 1
else:
    print("Got it wrong")

answer = input("what does the Powersupply do? ")
if answer.lower() == "supply power to the pc":
    print("Correct")
    score += 1
else:
    print("wrong")

answer = input("what does gpu do? ")
if answer.lower() == "display images":
    print("Correct ")
    score += 1
else:
    print("wrong")

print(first_name +" You got "+ str(score)+ " questions correct congratulations")


if score ==  0:
    print("How the hell you got all of them wrong??")
